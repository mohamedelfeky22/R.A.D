@using R.A.D.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div style="margin-top:80px">
    <div class="flip-card"   style=" height:300px; width:35%;margin:auto;">
        <div class="flip-card-inner">
            <div class="flip-card-front" style="background-color:white;">
                <img src="~/Content/img/User.jpg" style="border-radius:50%;margin:auto;margin-top:30px; height:150px;width:150px" />

                <h2 class="text-center" style="margin-top:20px;">Log into R.A.D</h2>
            </div>


            <div class="flip-card-back" style="background-color:white;">
                <section style="margin-top:70px;">
                    <div class="container">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(m => m.Email, new
                                                {
                                                    style = "width: 100%; border: 0; padding-bottom: 12px;border-bottom: 2px solid #E7EBED;color: #838383;  font-size: 16px;margin-bottom: 32px;height:30px;text-align:center;",
                                                        placeholder = "Email"
                                                })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.PasswordFor(m => m.Password, new
                                                {
                           
                                                    style = "width: 100%; border: 0; padding-bottom: 12px;border-bottom: 2px solid #E7EBED;color: #838383;  font-size: 16px;margin-bottom: 32px;height:30px;text-align:center;",
                                                        placeholder = "Password"
                                                })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            @Html.LabelFor(m => m.RememberMe, new { style = "color:black" })

                                        </div>
                                        <div class="col-lg-1">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                            </div>
                                        </div>


                                    </div>

                                    <div class="col-lg-11">
                                        <input type="submit" value="Log in" class="btn btn-default" style="border:1px solid black;
border-radius:10px;
padding:10px;float:right;" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}








