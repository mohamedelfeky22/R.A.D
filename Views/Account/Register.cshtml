@model R.A.D.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div style="margin-top:20px">
    <div class="flip-card" style=" height:500px; width:35%;margin:auto;">
        <div class="flip-card-inner">
            <div class="flip-card-front" style="background-color:white;">
                <img src="~/Content/img/User.jpg" style="border-radius:50%;margin:auto;margin-top:60px; height:150px;width:150px" />

                <h2 class="text-center" style="margin-top:80px;">
                    Create an account

                </h2>
                <h3 class="text-center"> It's quick and easy.</h3>
            </div>


            <div class="flip-card-back" style="background-color:white;">
                <section style="margin-top:70px;">

                    <div class="container">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(m => m.Name, new
                                                {
                                                    style = "width: 100%; border: 0; padding-bottom: 12px;border-bottom: 2px solid #E7EBED;color: #838383;  font-size: 16px;margin-bottom: 32px;height:30px;text-align:center;",
                                                        placeholder = "Name"
                                                })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger", style = "float:right" })
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(m => m.PhoneNumber, new
                                                {

                                                    style = "width: 100%; border: 0; padding-bottom: 12px;border-bottom: 2px solid #E7EBED;color: #838383;  font-size: 16px;margin-bottom: 32px;height:30px;text-align:center;",
                                                        placeholder = "Phone Number"
                                                })
                                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger", style = "float:right" })

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(m => m.Email, new
                                            {
                                
                                                style = "width: 100%; border: 0; padding-bottom: 12px;border-bottom: 2px solid #E7EBED;color: #838383;  font-size: 16px;margin-bottom: 32px;height:30px;text-align:center",
                                                    placeholder = "Email"
                                            })
                                        </div>
                                    </div>
                                    <div class="row">
                               
                                        <div class="col-lg-12">
                                            @Html.PasswordFor(m => m.Password, new
                                                    {
                                                        style = "width: 100%; border: 0; padding-bottom: 12px;border-bottom: 2px solid #E7EBED;color: #838383;  font-size: 16px;margin-bottom: 32px;height:30px;text-align:center",
                                                            placeholder = "Password"
                                                    })
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new
                                                {
                                                    style = "width: 100%; border: 0; padding-bottom: 12px;border-bottom: 2px solid #E7EBED;color: #838383;  font-size: 16px;margin-bottom: 32px;height:30px;text-align:center",
                                                        placeholder = "Confirm password"
                                                })
                                        </div>
                                    </div>



                                    <div class="row">
                                        <div class="col-lg-12">
                                            <input type="file" />
                                        </div>
                                    </div>


                                    <div>
                                        <input type="submit" class="btn btn-default" value="Register"
                                               style="border:1px solid black;border-radius:10px;padding:10px;float:right;" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </section>
                </div>
            </div>
        </div>
    </div>
 


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
