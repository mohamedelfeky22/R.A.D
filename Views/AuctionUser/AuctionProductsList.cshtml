@model IEnumerable<R.A.D.Models.ViewModels.AuctionVM>
@{
    ViewBag.Title = "AuctionProductsList";
}
@using PagedList.Mvc;
@using PagedList;

<input id="myInput"
       type="text"
       placeholder="Search with name or description or Any thing you want"
       style="margin-left: 500px;
                  margin-top: 20px;
                  width: 40%;
                  border: 0;
                  padding-bottom: 12px;
                  border-bottom: 2px solid #E7EBED;
                  color: #838383;
                  font-size: 16px;
                  height:40px;">





<h2 class="text-center"> <img src="~/img/auction.png" style="margin-bottom: 50px;margin-top:40px;" height="60" width="60" /> Auction Products</h2>


<div class="container">
    <div class="row">
        @foreach (var product in ViewBag.OnePageOfProducts)
        {
            <div class=" text-center  col-lg-3 x">
                <a href="/AuctionUser/AuctionDetailsProduct/@product.Id">
                    <img src="~/Images/Uploads/Products/@product.Id/@product.ImageName" height="400" width="350" />
                </a>
                <div> Product Code: @product.Id </div>
                <div>@product.Name</div>
            </div>
        }
    </div>

</div>


@section Scripts{

    <script>
        $(function () {

            //Search
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("div .x").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

        

    </script>





}

